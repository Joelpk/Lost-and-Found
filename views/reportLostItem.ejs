<%- include('partials/header.ejs') %>

<div class="container py-5">
  <div class="row align-items-center gy-4 mb-4">
    <!-- left side: image -->
    <div class="col-md-6">
      <img src="/images/homepage-pic.jpeg"
           alt="found item"
           class="img-fluid rounded-4 shadow-lg ">
    </div>

    <!-- right side: heading and intro -->
    <div class="col-md-6">
      <h1 class="display-5 fw-bold lh-1 mb-3">
        Lost an item? Report it right here. 
      </h1>
      <p class="lead mb-4">
        Fill the form below and enter the details of the missing item. Adding a photo helps the community identify your belongings faster.
      </p>
    </div>
  </div>

  <!-- Single form: item details + finder details -->
   <!-- Original form tag with enctype for picture upload  -->
  <!-- <form action="/report-lost" method="POST" enctype="multipart/form-data" class="row g-4"> -->

  <div class="container py-5">
  <form method="POST" action="/report-lost">

    <div class="row g-4">

      <!-- LEFT COLUMN : ITEM DETAILS -->
      <div class="col-md-6">
        <h4 class="fw-bold mb-3">Item Details</h4>

        <div class="mb-3">
          <label class="form-label">Item name</label>
          <input type="text"
                 class="form-control"
                 name="itemName"
                 placeholder="e.g. Brown leather wallet"
                 required>
        </div>

        <div class="mb-3">
          <label class="form-label">Place lost</label>
          <input type="text"
                 class="form-control"
                 name="location"
                 placeholder="e.g. Main Street bus stop">
        </div>

        <div class="mb-3">
          <label class="form-label">Date</label>
          <input type="date"
                 class="form-control"
                 name="eventDate">
        </div>

        <div class="mb-3">
          <label class="form-label">Item description</label>
          <textarea class="form-control"
                    name="description"
                    rows="4"
                    placeholder="Colors, marks, brand, contents..."></textarea>
        </div>
      </div>

      <!-- RIGHT COLUMN : USER DETAILS -->
      <div class="col-md-6">
        <h4 class="fw-bold mb-3">Your Contact Details</h4>

        <div class="mb-3">
          <label class="form-label">Your name</label>
          <input type="text"
                 class="form-control"
                 name="fullName"
                 placeholder="Full name"
                 required>
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email"
                 class="form-control"
                 name="email"
                 placeholder="you@example.com">
        </div>

        <div class="mb-3">
          <label class="form-label">Phone</label>
          <input type="tel"
                 class="form-control"
                 name="phone"
                 placeholder="+91 9XXXXXXXXX">
        </div>
      </div>

    </div>

    <!-- SUBMIT -->
    <div class="mt-4 text-center">
      <button type="submit" class="btn btn-primary btn-lg">
        Submit Report
      </button>
    </div>

  </form>
</div>




</div>

