<%- include('partials/header.ejs') %>

<div class="container py-5">
  <div class="row align-items-center gy-4 mb-4">
    <!-- left side: image -->
    <div class="col-md-6">
      <img src="/images/homepage-pic.jpeg"
           alt="found item"
           class="img-fluid rounded-4 shadow-lg ">
    </div>

    <!-- right side: heading and intro -->
    <div class="col-md-6">
      <h1 class="display-5 fw-bold lh-1 mb-3">
        Lost an item? Report it right here. 
      </h1>
      <p class="lead mb-4">
        Fill the form below and enter the details of the missing item. Adding a photo helps the community identify your belongings faster.
      </p>
    </div>
  </div>

  <!-- Single form: item details + finder details -->
  <form action="/report-lost" method="POST" enctype="multipart/form-data" class="row g-4">
    <input type="hidden" name="type" value="lost">
   
    <!-- Item Details column -->
    <div class="col-lg-6">
      <h4 class="h3 fw-bold mb-3">Item Details</h4>
      <div class="mb-3">
        <label for="itemName" class="form-label">Item name</label>
        <input type="text" id="itemName" name="itemName" class="form-control" placeholder="e.g. Brown leather wallet" required>
      </div>
      <div class="mb-3">
        <label for="placeFound" class="form-label">Place lost</label>
        <input type="text" id="location" name="location" class="form-control" placeholder="e.g. Main Street bus stop" required>
      </div>
      <div class="mb-3">
        <label for="foundAt" class="form-label">Date & time</label>
        <input type="date" id="eventDate" name="eventDate" class="form-control">
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Item description</label>
        <textarea id="description" name="description" class="form-control" rows="4" placeholder="Colors, marks, brand, contents..."></textarea>
      </div>
      <!-- upload photo -->
      <div class="mb-3">
        <label for="itemPhoto" class="form-label">Upload photo of the item</label>
        <input class="form-control" type="file" id="itemPhoto" name="itemPhoto" accept="image/*" onchange="previewImage(event)">
        <div class="mt-3">
          <img id="photoPreview" src="" alt="Preview" class="img-fluid rounded" style="display:none; max-height:220px; box-shadow:0 6px 20px rgba(0,0,0,0.08)">
        </div>
      </div>
    </div>

    <!-- Founder / Finder Details column -->
    <div class="col-lg-6">
      <h4 class="h3 fw-bold mb-3">Your contact details</h4>

      <div class="mb-3">
        <label for="finderName" class="form-label">Your name</label>
        <input type="text" id="fullName" name="fullName" class="form-control" placeholder="Full name" required>
      </div>

      <div class="mb-3">
        <label for="contact" class="form-label">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="email" required>
      </div>

      <div class="mb-3">
        <label for="contact" class="form-label">Phone</label>
        <input type="tel" id="phone" name="phone" class="form-control" placeholder="Phone" required>
      </div>

      <div class="mb-3">
        <label for="extraNotes" class="form-label">Extra notes (optional)</label>
        <textarea id="extraNotes" name="extraNotes" class="form-control" rows="6" placeholder="Any additional info (where you last saw it, how to contact you, etc.)"></textarea>
      </div>

      <div class="d-flex gap-3 align-items-center mt-2">
        <button type="submit" class="btn btn-primary btn-lg">Submit Report</button>
        <button type="reset" class="btn btn-outline-secondary">Reset</button>
      </div>
    </div>
  </form>
</div>

<!-- small JS for preview -->
<script>
  function previewImage(event) {
    const input = event.target;
    const preview = document.getElementById('photoPreview');
    if (!input.files || !input.files[0]) {
      preview.style.display = 'none';
      preview.src = '';
      return;
    }

    const file = input.files[0];
    // quick client-side size check (optional)
    const maxMB = 5;
    if (file.size > maxMB * 1024 * 1024) {
      alert('Please pick an image smaller than ' + maxMB + 'MB.');
      input.value = '';
      preview.style.display = 'none';
      return;
    }

    const reader = new FileReader();
    reader.onload = function(e) {
      preview.src = e.target.result;
      preview.style.display = 'block';
    };
    reader.readAsDataURL(file);
  }
</script>

